<h1>Mando's Burgers!</h1>

<h2>Burgers I Love!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Bon Apetit!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">
    <div class="form-group">
        <label for="br">Burger Name:</label>
        <input type="text" id="br" name="burger_name">
    </div>

    <div class="form-group">
        <button type="submit" class="center-block btn btn-default"> Add Burger</button>
    </div>
</form>